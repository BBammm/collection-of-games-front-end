.bet-amount-input-wrapper {
    display: flex;
    color: #fff;
    position: relative;
    z-index: 10;
    i{
        margin: auto;
        display: block;
    }
    input{
        flex-grow: 1;
        min-width:0;
        width: 100%;
        background: #394a5a;
        color: #fff;
        font-size: 14px;
        height: 40px;
        line-height: 40px;
        outline: 0;
        padding-left: 15px;
        border-radius: 5px 0 0 5px ;
        border-style: none;
        font-weight: bold;
    }
    div.multiply-bet {
        display: flex;
        flex-basis: 40px;
        flex-grow: 0;
        flex-shrink: 0;
        height: 40px;
        padding: 0;
        font-size: 12px;
        text-align: center;
        background-color: #223342;
        color: #fff;
        border-color: #e5e5e5;
        border-left: 0;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color:#94a5b5;
        font-weight: bold;
        border-right:2px solid #15212c;
        span.coin-add{
            display: inline-block;
            width: 100%;
            height: 100%;
            svg{
                width: 17px;
                height: 100%;
                fill:#94a5b5;
                vertical-align: middle;
            }
        }
        &:hover{
            background: #364e64;
        }
        &.on{
            background: #364e64;
        }
        &:last-child {
            border-radius: 0 5px 5px 0;
        }
        div.button-bet {
            overflow: hidden;
            position: absolute;
            width: 100px;
            ul{
                list-style: none;
                padding:0;
                background:#223342;
                margin-bottom: 0;
                li {
                    color: #fff;
                    border-radius: 5px;
                    margin-bottom: 2px;
                    cursor: pointer;
                    border-top: 1px solid #15212c;
                    padding: 10px;
                 }
            }
        }
    }
}



