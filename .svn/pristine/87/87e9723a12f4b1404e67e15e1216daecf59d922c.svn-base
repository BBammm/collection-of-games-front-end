@media (max-width: 768px) {
    .bet-amount-input-wrapper {
        flex-wrap: wrap;
        justify-content: space-between;
        input{
            width: 80%;
            margin-bottom: 10px;
        }
        div.multiply-bet{
            flex-basis: 24%;
            border-radius: 5px 5px 5px 5px;
            border-right:none;
            &:last-child{
                border-radius: 5px 5px 5px 5px;
            }
            &.list-bet{
                border-radius: 0 5px 5px 0;
                margin-bottom: 10px;
                flex-basis: 20%;
            }
        }
    }
}

