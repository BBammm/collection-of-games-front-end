div.trade-content{
    padding: 40px 0;
    div.liveBox{
        background: #1a2732;
        padding: 30px 50px;
        h2.title{
            color:#fff;
            font-size: 18px;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
        }
        div.live-price-wrap{
            margin: 0 auto;
            div.price-box{
                border-right: 1px solid #2d4152;
                margin-bottom: 40px;
                word-break: break-all;
                &:last-child{
                    border-right:none;
                }
                p{
                    font-size: 18px;
                    color:#14dbcf;
                    font-weight: bold;
                    margin-bottom: 5px;
                }
                span{
                    font-size: 16px;
                    color:#94a5b5;
                    word-break: break-word;
                    small{
                        font-size: 12px;
                        color:#516270;
                    }
                }
            }
        }

        div.link-box-wrap{
            width: 100%;
            div.link-box{
                display: flex;
                justify-content: space-between;
                flex-wrap: wrap;
                div.card{
                    width: 18%;
                    border-radius: 0;
                    color:#fff;
                    position:relative;
                    overflow: hidden;
                    background: #15212c;
                    border:none;
                    a{
                        display:inline-block;
                        padding: 10px;
                        text-decoration: none;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        flex: 1 1;
                        img{
                            width: 75%;
                            &.small{
                                width:60%;
                            }
                        }
                    }
                }
            }
        }
    }
    div.trade-step{
        margin: 30px auto 0;
        padding: 0px 50px 30px;
        background: #1a2732;
        div.trade-step-left{
            padding: 0 15px 0 0;
            div.trade-header{
                height: 50px;
                margin-top: 30px;
                h5{
                    color:#fff;
                    font-size: 18px;
                    font-weight: bold;
                }
            }
            div.dataWrap{
              margin:0 auto 10px;
              display: flex;
              div.formfild{
                  display: flex;
                  flex-wrap: wrap;
                  align-items: center;
                  width: 100%;
                  max-width: 330px;
                  justify-content: space-between;
                  &.fild2{
                      position: relative;
                      max-width: 300px;
                      img.arrow{
                          position: absolute;
                          width: 25px;
                          right: -10%;
                      }
                  }
                  &.destination-fild{
                      div.check-fild{
                            display: flex;
                            align-items: center;
                            width: 100%;
                            .destination-check{
                                width: 20px;
                                height: 20px;
                                border-radius: 5px;
                                margin-right: 5px;
                                cursor: pointer;
                            }
                            .mat-form-field{
                                width: 70%;
                            }
                      }
                  }
                  select{
                      width: 100%;
                      font-size: 13px;
                      height: 35px;
                      border: none;
                      background: #394a5a;
                      color: #94a5b5;
                      outline: none;
                      cursor: pointer;
                      font-size: 14px;
                      padding:5px;
                      border-radius:5px;
                  }
                  label{
                      position: absolute;
                      right: 0;
                      top: 50%;
                      transform:translateY(-50%);
                      font-size: 14px;
                      color:#fff;
                  }
                  p.input-title{
                      margin-bottom: 3px;
                      margin-left: 3px;
                      font-size: 12px;
                      color:#fff;
                  }
              }
              button.send-btn{
                  border-radius: 5px;
                  border: solid 2px #14dbcf;
                  color:#14dbcf;
                  background-color: #15212c;
                  min-width: 20%;
                  font-size: 14px;
              }
           }
           div.btn-home{
               margin-top: 10px;
               button{
                   color: #15212c;
                   font-weight: bold;
                   background-color: #14dbcf;
                   min-width: 100px;
                   height: 35px;
                   font-size: 14px;
                   border-radius: 5px;
                   border-style: none;
                   padding: 7px;
                   &.cancle{
                       margin-right: 10px;
                       background: #2d516f;
                       color:#fff;
                   }
               }
           }
           div.QrWrap{
               background: #15212c;
               min-height: 250px;
               margin: 20px auto 0;
               padding: 30px 45px;
               text-align: center;
               div.QrBox{
                   width: 140px;
                   height: 140px;
                   display: inline-block;
                   margin:0 auto;
               }
               div.address{
                   width: 100%;
                   margin-top: 20px;
                   display:flex;
                   align-items: center;
                   .mat-form-field{
                       width: 70%;
                   }
                   button.copy-btn{
                        height: 35px;
                        border-radius: 5px;
                        border: solid 2px #14dbcf;
                        color:#14dbcf;
                        background-color: #15212c;
                        min-width: 20%;
                        margin-left: 10px;
                        font-size: 14px;
                   }
                   &.destination{
                       margin-top: 10px;
                   }
               }
           }
       }
       div.trade-step-right{
           div.trade-header{
               height: 50px;
               margin-top: 30px;
               h5{
                   color:#fff;
                   font-size: 18px;
                   font-weight: bold;
               }
           }
           div.trade-body{
               p{
                   color:#94a5b5;
                   font-size: 14px;
                   word-break: keep-all;
                   small{
                       color:#4c6377;
                       font-size: 12px;
                       margin-bottom: 5px;
                       display: block;
                   }
               }
           }
       }
    }
    div.history-box{
        margin-top:30px;
        padding: 30px 50px;
        background-color: #2b3c4c;
        h2.title{
            color:#fff;
            font-size: 18px;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
        }
        div.table-home{
            table{
                thead{
                     background-color: #3e6c96;
                     tr{
                         th{
                             color:#fff;
                             font-size: 14px;
                             text-align: right;
                         }
                     }
                }
                tbody{
                    tr{
                        background-color: #3c5062;
                        td{
                            text-align: right;
                            color:#94a5b5;
                            font-size: 14px;
                        }
                        &.no-display{
                            td{
                                text-align: center;
                            }
                        }
                        &:nth-child(odd){
                            background-color: #2b3c4c;
                        }
                    }
                }
            }
            nav{
                ul{
                    text-align: center;
                    justify-content: center;
                    margin-bottom: 0;
                    li{
                        a.page-link{
                            color:#627281;
                            background: none;
                            border:none;
                            font-size: 12px;
                            font-weight: bold;
                            i{
                                font-size: 10px;
                            }
                        }
                        &.active{
                            a{
                                color:#95a6b5;
                            }
                        }
                    }
                }
            }
        }
    }
    div.history-link{
        text-align: center;
        margin-top: 30px;
        button{
            border-radius: 5px;
            background-color: #14dbcf;
            border-style: none;
            color:#fff;
            font-weight: bold;
            font-size: 16px;
            padding: 20px 45px;
        }
    }
}



@media (max-width: 768px) {

    div.trade-content{
        div.liveBox{
            div.live-price-wrap{
                div.price-box{
                    &:nth-child(2){
                        border-right:none;
                    }
                }
            }
            div.link-box-wrap{
                div.link-box{
                    div.card{
                        width: 32%;
                        border:none;
                        &.responsive-card{
                            width:49%;
                            margin-bottom: 10px;
                            a{
                                img{
                                    width: 50%;
                                }
                            }
                        }
                    }
                }
            }
        }
    }

}

@media (max-width: 576px) {

    div.trade-content{
        div.liveBox{
            padding: 30px 15px;
        }
        div.trade-step{
            padding: 0 15px;
            div.trade-step-left{
                padding: 0;
            }
            div.trade-step-right{
                padding: 0;
            }
        }
        div.history-box{
            padding: 30px 15px;
        }
    }

}
